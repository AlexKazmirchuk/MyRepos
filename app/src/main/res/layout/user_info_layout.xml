<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#15242D">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <FrameLayout
            android:id="@+id/userImgDiv"
            android:layout_width="135dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle"
                android:padding="4dp"
                android:src="@drawable/user_img_demo" />
        </FrameLayout>

        <TextView
            android:id="@+id/userNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chris Banes"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_toEndOf="@id/userImgDiv"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/userBioIV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_bio"
            android:layout_below="@id/userNameTV"
            android:layout_toEndOf="@id/userImgDiv"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/userBioTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stay hungry, stay foolish. Keep learning"
            android:textColor="#ffffff"
            android:layout_toEndOf="@id/userBioIV"
            android:layout_alignTop="@id/userBioIV"
            android:layout_alignEnd="@id/userNameTV"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/userLocationTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New York"
            android:textColor="#ffffff"
            android:layout_alignStart="@id/userBioTV"
            android:layout_below="@id/userBioTV"
            android:layout_alignEnd="@id/userNameTV"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:id="@+id/userLocationIV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location"
            android:layout_alignLeft="@id/userBioIV"
            android:layout_alignTop="@id/userLocationTV" />

        <TextView
            android:id="@+id/userLinkTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://chris.banes.me"
            android:textColor="#ffffff"
            android:layout_alignStart="@id/userLocationTV"
            android:layout_below="@id/userLocationTV"
            android:layout_alignEnd="@id/userNameTV" />

        <ImageView
            android:id="@+id/userLinkIV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_links"
            android:layout_alignStart="@id/userBioIV"
            android:layout_alignTop="@id/userLinkTV" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_followers"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/userFollowersCountTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="54"
            android:layout_marginEnd="50dp"
            android:textColor="#ffffff"
            android:gravity="center" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_stars"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/userStarsCountTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="454"
            android:textColor="#ffffff"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>


