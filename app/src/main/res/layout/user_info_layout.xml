<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#15242D">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <FrameLayout
            android:id="@+id/userImgDiv"
            android:layout_width="135dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/userPhotoIV"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle"
                android:padding="4dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/userNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_toEndOf="@id/userImgDiv"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:id="@+id/userInfoItemDiv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/userNameTV"
            android:layout_toEndOf="@id/userImgDiv"
            android:layout_alignEnd="@id/userNameTV" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_followers"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/userFollowersCountTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="50dp"
            android:textColor="#ffffff"
            android:gravity="center" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_repo"
            android:padding="3dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/userReposCountTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>


